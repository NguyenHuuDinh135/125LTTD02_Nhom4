<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalendarWhiteTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="LeftRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>
    <style name="RightRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ShapeImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>


    <style name="CalendarDayLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>