<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    tools:context=".ui.page.CameraActivity">

    <!-- Include top bar nếu cần -->
    <include
        android:id="@+id/include_top_bar"
        layout="@layout/partial_main_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Frame hiển thị preview camera -->
    <FrameLayout
        android:id="@+id/camera_preview_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toBottomOf="@id/include_top_bar"
        app:layout_constraintBottom_toTopOf="@id/buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

    </FrameLayout>

    <!-- Hàng nút flash - chụp - switch camera -->
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3">

        <!-- Nút flash -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_flash_off"
            app:tint="@android:color/white"/>

        <!-- Nút chụp ảnh -->
        <ImageButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_camera"
            app:tint="@android:color/white"/>

        <!-- Nút chuyển camera -->
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:src="@drawable/ic_switch_camera"
            app:tint="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
