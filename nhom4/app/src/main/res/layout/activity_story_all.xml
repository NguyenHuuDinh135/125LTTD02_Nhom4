<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surfaceContainerHigh"  tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_account_circle_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/md_theme_onSurface"  android:contentDescription="User Icon"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_friends"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Bạn bè"
            android:textAllCaps="false"
            android:drawablePadding="4dp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:cornerRadius="16dp"  app:iconGravity="textStart"
            app:icon="@drawable/outline_diversity_3_24"
            app:iconTint="@color/md_theme_onSurface"  android:textColor="@color/md_theme_onSurface"  app:iconSize="24dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"

            app:strokeColor="@color/md_theme_outline"  app:strokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_heart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_favorite_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/md_theme_onSurface"  android:contentDescription="Heart Icon"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/icon_grid_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="4"
        tools:itemCount="28" tools:listitem="@layout/item_story_all" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="80dp"
            android:contentDescription="Close"
            android:src="@drawable/outline_cancel_24"
            app:tint="@color/md_theme_onSurface"  />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_arrow_forward_ios_24"
            app:tint="@color/md_theme_onSurface"  android:contentDescription="Up"
            android:layout_marginEnd="80dp"
            android:rotation="270"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_share_24"
            app:tint="@color/md_theme_onSurface"  android:contentDescription="Share"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>