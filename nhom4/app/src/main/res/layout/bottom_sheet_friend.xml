<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bts_layot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:background="?attr/colorSurface">

    <!-- Header: tổng số bạn bè -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="20 Friends"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="?attr/colorOnSurface"
        android:drawableStart="@drawable/baseline_favorite_24"
        android:drawableTint="@color/md_theme_errorContainer_highContrast"
        android:drawablePadding="8dp"/>

    <!-- Search bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="?attr/colorSurfaceContainer"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorOnSurfaceVariant"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/search_icon"
        app:startIconTint="?attr/colorOnSurfaceVariant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm bạn mới"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp">

            <!-- Friends label -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Friends"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/friend_ic"
                android:drawableTint="?attr/colorOnSurfaceVariant"
                android:drawablePadding="8dp"/>

            <!-- RecyclerView bạn bè -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvFriends"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:itemCount="3"
                tools:listitem="@layout/item_friend"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_see_more_1"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Xem thêm bạn"
                android:textAllCaps="false"
                app:cornerRadius="12dp" />

            <!-- Friend Requests label -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu cầu kết bạn"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="16dp"
                android:drawableTint="?attr/colorOnSurfaceVariant"
                android:drawablePadding="8dp"/>

            <!-- RecyclerView yêu cầu kết bạn -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvFriendRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="3"
                tools:listitem="@layout/item_friend_request"/>

            <!-- Suggestions label -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestions"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:layout_marginTop="16dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:drawableStart="@drawable/star_shine_ic"
                android:drawableTint="?attr/colorOnSurfaceVariant"
                android:drawablePadding="8dp"/>

            <!-- RecyclerView gợi ý bạn bè -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSuggestions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:itemCount="3"
                tools:listitem="@layout/item_recommend_friend"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_see_more_2"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Xem thêm"
                android:textAllCaps="false"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
