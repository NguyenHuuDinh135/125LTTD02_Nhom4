<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewProfileTitle"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/th_ng_tin_c_nh_n"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- KHU VỰC AVATAR -->
        <FrameLayout
            android:id="@+id/layout_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/textViewProfileTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:padding="1dp"
                android:scaleType="centerCrop"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

            <ImageView
                android:id="@+id/btn_edit_avatar_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_pill_dark"
                android:src="@drawable/outline_camera_24"
                android:padding="6dp"
                app:tint="#FFFFFF"/>
        </FrameLayout>

        <!-- Card thông tin -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_avatar"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Email -->
                <include
                    android:id="@+id/item_email"
                    layout="@layout/item_profile_info" />

                <!-- Name -->
                <include
                    android:id="@+id/item_name"
                    layout="@layout/item_profile_info" />

                <!-- Birthday -->
                <include
                    android:id="@+id/item_birthday"
                    layout="@layout/item_profile_info" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút Lưu thay đổi -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/l_u_thay_i"
            app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nút Đăng xuất -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSettings"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ng_xu_t"
            android:textColor="?attr/colorError"
            app:icon="@drawable/outline_logout_24"
            app:iconTint="?attr/colorError"
            app:layout_constraintTop_toBottomOf="@id/buttonSave"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
