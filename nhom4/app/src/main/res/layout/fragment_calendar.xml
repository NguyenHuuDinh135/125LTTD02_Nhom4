<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:paddingTop="100dp">

    <!-- Container chính có hành vi cuộn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 2. Header Info: Icon và Text thông báo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:padding="8dp"
                android:src="@drawable/ic_calendar"
                app:tint="?attr/colorPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_header_info"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:text="Khoảnh khắc đầu tiên của bạn đã được ghi nhận vào ngày 3 thg 3, 2025"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <!-- 3. TabLayout dạng Segmented (Viên thuốc) -->
        <!-- Bọc trong CardView để tạo nền xám bo tròn -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                app:tabGravity="fill"
                app:tabIndicatorFullWidth="true"
                app:tabIndicatorGravity="stretch"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorColor="?attr/colorSurface"
                app:tabIndicatorHeight="40dp"
                app:tabMode="fixed"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="?attr/colorOnSurface"
                app:tabTextColor="?attr/colorOnSurfaceVariant">

                <!--
                   Mẹo: app:tabIndicatorGravity="stretch" + tabIndicatorColor="Surface"
                   sẽ tạo hiệu ứng "nút được chọn nổi lên trên nền xám".
                   Nếu bạn muốn màu nút chọn là Primary (xanh/tím), hãy đổi tabIndicatorColor="?attr/colorPrimary"
                   và tabSelectedTextColor="?attr/colorOnPrimary".
                -->

            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
