<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- CardView chính chứa toàn bộ tin nhắn, căn phải -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- WIDGET BÀI POST (Header xanh) -->
            <LinearLayout
                android:id="@+id/post_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:orientation="vertical"
                android:padding="12dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    tools:text="Bạn đã trả lời một bài đăng" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnPrimary"
                    tools:text="Vừa xong" />

            </LinearLayout>

            <!-- ẢNH PREVIEW BÀI POST -->
            <ImageView
                android:id="@+id/img_post_preview"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:background="?attr/colorSurfaceContainerHighest"
                app:cardCornerRadius="16dp"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- NỘI DUNG TIN NHẮN REPLY -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnPrimaryContainer"
                tools:text="Đây là nội dung reply của tôi" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>