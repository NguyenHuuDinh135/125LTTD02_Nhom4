<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/layout_empty_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/outline_photo_24"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:text="ChÆ°a cÃ³ bÃ i viáº¿t nÃ o"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="HÃ£y chia sáº» khoáº£nh kháº¯c Ä‘áº§u tiÃªn cá»§a báº¡n ngay bÃ¢y giá»! ðŸ“¸"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_content_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="textCaption,textPostContent,card_image_container,cardTimestamp,layoutAvatarGroup,layout_reaction_bar"
        android:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/caption"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textPostContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        style="?attr/materialCardViewFilledStyle"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintTop_toBottomOf="@id/textPostContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/postImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Post Image"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_heart_overlay"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                app:icon="@drawable/outline_favorite_border_24"
                app:iconTint="?attr/colorError"
                app:backgroundTint="?attr/colorSurface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_activity_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryContainer"
                android:padding="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_inviter_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="1dp"
                    android:background="?attr/colorOnPrimaryContainer"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_invite_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="Rá»§ rÃª tham gia cÃ¹ng!"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    app:layout_constraintStart_toEndOf="@id/img_inviter_avatar"
                    app:layout_constraintEnd_toStartOf="@id/btn_join_activity"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_join_activity"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tham gia"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_12_00"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutAvatarGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTimestamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="User Icon"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textAvatarGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user1_user2"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_reaction_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_shutter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/edt_comment_trigger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/g_i_tin_nh_n"
                android:paddingStart="16dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:longClickable="false" />

            <TextView android:id="@+id/reaction_1" android:layout_width="44dp" android:layout_height="match_parent" android:gravity="center" android:textSize="22sp" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true"/>
            <TextView android:id="@+id/reaction_2" android:layout_width="44dp" android:layout_height="match_parent" android:gravity="center" android:textSize="22sp" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true"/>
            <TextView android:id="@+id/reaction_3" android:layout_width="44dp" android:layout_height="match_parent" android:gravity="center" android:textSize="22sp" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true"/>
            <ImageView android:id="@+id/btn_add_reaction" android:layout_width="44dp" android:layout_height="match_parent" android:padding="12dp" android:src="@drawable/outline_add_reaction_24" app:tint="?attr/colorOnSurfaceVariant" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_reactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 â¤ï¸"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/layout_reaction_bar"
                app:layout_constraintTop_toTopOf="@id/layout_reaction_bar" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/btn_shutter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_shutter_fill_grey"
        android:stateListAnimator="@animator/mtrl_btn_state_list_anim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_grid_view"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        app:icon="@drawable/outline_download_24"
        app:iconSize="28dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/btn_shutter"
        app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        app:icon="@drawable/outline_share_24"
        app:iconSize="28dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/btn_shutter"
        app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/overlay_reply_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorOnSurface"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_reply_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            style="?attr/materialCardViewElevatedStyle"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pháº£n há»“i bÃ i viáº¿t"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="?attr/colorSurface"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:cursorColor="?attr/colorPrimary"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_reply_real"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:gravity="top|start"
                        android:hint="Nháº­p tin nháº¯n..."
                        android:textColor="?attr/colorOnSurface"
                        android:imeOptions="actionSend"
                        android:inputType="textMultiLine|textCapSentences" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_cancel_reply"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Há»§y"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_send_reply_direct"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gá»­i"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="?attr/colorSecondaryContainer"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>