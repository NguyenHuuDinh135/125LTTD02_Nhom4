<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- ===================================================== -->
    <!-- CAPTION -->
    <!-- ===================================================== -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Caption demo"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===================================================== -->
    <!-- IMAGE CARD -->
    <!-- ===================================================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/textCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintDimensionRatio="1:1">

        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </com.google.android.material.card.MaterialCardView>

    <!-- ===================================================== -->
    <!-- TIMESTAMP -->
    <!-- ===================================================== -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="HÃ´m nay 12:00"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:background="?attr/colorSurfaceContainerHigh"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/card_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===================================================== -->
    <!-- AVATAR GROUP -->
    <!-- ===================================================== -->
    <LinearLayout
        android:id="@+id/layoutAvatarGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTimestamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="?attr/colorOnSurfaceVariant"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textAvatarGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User1, User2â€¦"
            android:textColor="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- COMMENT BAR -->
    <!-- ===================================================== -->
    <LinearLayout
        android:id="@+id/layout_reaction_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_pill_dark"
        android:paddingHorizontal="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btn_shutter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Gá»­i tin nháº¯nâ€¦"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E9E9E"
            android:paddingStart="12dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ðŸ˜"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ðŸ¥º"
            android:textSize="24sp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ðŸ’›"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/outline_add_reaction_24"
            app:tint="#B0B0B0" />
    </LinearLayout>

    <!-- ===================================================== -->
    <!-- SHUTTER BUTTON -->
    <!-- ===================================================== -->
    <View
        android:id="@+id/btn_shutter"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_shutter_fill_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LEFT -->
    <ImageView
        android:id="@+id/btn_grid_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:padding="10dp"
        android:src="@drawable/outline_apps_24"
        app:tint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/btn_shutter"
        app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RIGHT -->
    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:src="@drawable/outline_done_outline_24"
        app:tint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/btn_shutter"
        app:layout_constraintBottom_toBottomOf="@id/btn_shutter"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
