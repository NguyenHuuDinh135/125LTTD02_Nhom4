<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- Nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header -->
            <TextView
                android:text="Google TV"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"/>

            <!-- Section: Lựa chọn hàng đầu -->
            <TextView
                android:text="Lựa chọn hàng đầu cho bạn"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_top_picks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_movie_card"
                app:layoutManagerOrientation="horizontal"/>

            <!-- Section: Các phim được ưa chuộng -->
            <TextView
                android:text="Các phim được ưa chuộng"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layoutManagerOrientation="horizontal"
                tools:listitem="@layout/item_movie_card" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Nút Kết nối TV -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_connect_tv"
        style="?attr/materialButtonOutlinedStyle"
        android:text="Kết nối TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:icon="@drawable/ic_baseline_cast_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_anchorGravity="bottom|end"
        android:layout_gravity="bottom|end"/>

    <!-- Thanh điều hướng dưới -->
    <com.google.android.material.navigation.NavigationBarView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="?attr/colorOnSurfaceVariant"
        app:itemTextColor="?attr/colorOnSurfaceVariant"
        android:background="?attr/colorSurfaceContainerHigh"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
